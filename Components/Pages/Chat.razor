@page "/chat"
@attribute [Authorize]
@rendermode InteractiveServer
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.EntityFrameworkCore
@using BlazorSignalRApp.Data
@using BlazorSignalRApp.Models
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>üí¨ Chat</PageTitle>

@if (!isLoaded)
{
    <div class="chat-shell py-5">
        <div class="container">
            <div class="glass-panel p-5 text-center text-muted fw-semibold">
                @errorText ?? "Katƒ±lƒ±mcƒ±lar y√ºkleniyor..."
            </div>
        </div>
    </div>
}
else
{
    <div class="chat-shell py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-12 col-lg-4">
                    <div class="glass-panel chat-panel h-100 d-flex flex-column gap-3">
                        <div>
                            <p class="text-uppercase small text-muted mb-1">Siz</p>
                            <h2 class="h5 mb-0">@currentUser?.Name</h2>
                            <small class="text-muted">@currentUser?.Email</small>
                        </div>
                        <div>
                            <label class="form-label text-uppercase small fw-semibold text-muted">Katƒ±lƒ±mcƒ±lar</label>
                            <input class="form-control form-control-lg rounded-4"
                                   type="search"
                                   placeholder="ƒ∞sim veya e-posta"
                                   @bind="userFilter"
                                   @bind:event="oninput" />
                        </div>
                        <div class="chat-user-list">
                            <button type="button"
                                    class="chat-user w-100 text-start @(selectedRecipientId is null ? "active" : string.Empty)"
                                    @onclick="() => SelectRecipient(null)">
                                <div class="fw-semibold">üåê Genel sohbet</div>
                                <small class="text-muted">Herkesle payla≈ü</small>
                            </button>
                            @foreach (var user in FilteredUsers)
                            {
                                <button type="button"
                                        class="chat-user w-100 text-start @(user.Id == selectedRecipientId ? "active" : string.Empty)"
                                        @onclick="() => SelectRecipient(user.Id)">
                                    <div class="fw-semibold">@user.Name</div>
                                    <small class="text-muted">@user.Email</small>
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-8">
                    <div class="glass-panel chat-panel h-100 d-flex flex-column">
                        <div class="chat-panel__header d-flex justify-content-between align-items-start flex-wrap gap-3">
                            <div>
                                <p class="text-uppercase small text-muted mb-1">@ConversationTypeText</p>
                                <h2 class="h4 mb-0">@ConversationTitle</h2>
                            </div>
                            <div class="text-end">
                                <span class="badge @(statusText == "Connected" ? "bg-success-subtle text-success" : "bg-secondary")">
                                    @statusText
                                </span>
                                <p class="small text-muted mb-0 mt-2">@DateTime.Now.ToString("dddd, HH:mm")</p>
                            </div>
                        </div>

                        <div class="chat-panel__body flex-grow-1">
                            <div class="chat-timeline" id="messagesList">
                                @if (messages.Count == 0)
                                {
                                    <div class="chat-empty text-center text-muted py-5">
                                        <p class="fw-semibold mb-1">Hen√ºz mesaj yok</p>
                                        <small>Konu≈ümayƒ± ba≈ülatmak i√ßin a≈üaƒüƒ±daki kutuyu kullanƒ±n.</small>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var chat in messages)
                                    {
                                        bool isSelf = chat.UserName == currentUser?.Name;
                                        <article class="chat-bubble @(isSelf ? "me" : string.Empty)">
                                            <div class="chat-bubble__meta">
                                                <span class="fw-semibold">@chat.UserName</span>
                                                <div class="d-flex align-items-center gap-2">
                                                    @if (chat.IsPrivate)
                                                    {
                                                        <span class="badge text-bg-warning-subtle text-capitalize">
                                                            √ñzel @(chat.RecipientUserName == currentUser?.Name ? "(size)" : $"‚Üí {chat.RecipientUserName}")
                                                        </span>
                                                    }
                                                    <small>@chat.SentAt.ToLocalTime().ToString("g")</small>
                                                </div>
                                            </div>
                                            <p>@chat.Message</p>
                                        </article>
                                    }
                                }
                            </div>
                        </div>

                        <div class="chat-panel__composer">
                            <label class="form-label text-uppercase small fw-semibold text-muted">
                                @(selectedRecipientId is null ? "Genel mesaj" : $"√ñzel mesaj: {ConversationTitle}")
                            </label>
                            <div class="composer-row">
                                <textarea class="form-control flex-grow-1"
                                          rows="2"
                                          placeholder="Bir ≈üeyler yaz..."
                                          @bind="messageInput"
                                          @onkeydown="HandleKeyDown"></textarea>
                                <button class="btn btn-primary px-4"
                                        type="button"
                                        @onclick="Send"
                                        disabled="@(!CanSend)">
                                    G√∂nder
                                </button>
                            </div>
                            <small class="text-muted d-block mt-2">
                                Enter = g√∂nder, Shift+Enter = satƒ±r atla.
                                @(selectedRecipientId is null ? "Mesaj herkes tarafƒ±ndan g√∂r√ºn√ºr." : "Mesaj yalnƒ±zca se√ßtiƒüiniz kullanƒ±cƒ±ya iletilir.")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private HubConnection? hubConnection;
    private readonly List<ChatMessageViewModel> messages = new();
    private List<User> users = new();
    private User? currentUser;
    private string? messageInput;
    private string statusText = "Disconnected";
    private string userFilter = string.Empty;
    private string? errorText;
    private bool isLoaded;
    private int? selectedRecipientId;

    private IEnumerable<User> FilteredUsers => string.IsNullOrWhiteSpace(userFilter)
        ? users.Where(u => u.Id != currentUser?.Id)
        : users.Where(u => u.Id != currentUser?.Id && (
            (u.Name ?? string.Empty).Contains(userFilter, StringComparison.OrdinalIgnoreCase)
            || (u.Email ?? string.Empty).Contains(userFilter, StringComparison.OrdinalIgnoreCase)));

    private string ConversationTitle =>
        selectedRecipientId is null
            ? "Genel Kanal"
            : users.FirstOrDefault(u => u.Id == selectedRecipientId)?.Name ?? "Bilinmeyen";

    private string ConversationTypeText =>
        selectedRecipientId is null ? "Herkes" : "√ñzel sohbet";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;
        if (principal?.Identity?.IsAuthenticated is not true)
        {
            errorText = "Bu sayfa i√ßin oturum a√ßmanƒ±z gerekir.";
            return;
        }

        var identityUserId = principal.FindFirstValue(ClaimTypes.NameIdentifier);
        if (identityUserId is null)
        {
            errorText = "Kullanƒ±cƒ± bilgisi alƒ±namadƒ±.";
            return;
        }

        await using var context = await DbFactory.CreateDbContextAsync();
        users = await context.ChatUsers.AsNoTracking().OrderBy(u => u.Name).ToListAsync();
        currentUser = users.FirstOrDefault(u => u.IdentityUserId == identityUserId);

        if (currentUser is null)
        {
            var email = principal.FindFirstValue(ClaimTypes.Email) ?? principal.Identity?.Name ?? "user";
            currentUser = new User
            {
                Name = BuildDisplayName(email),
                Email = email,
                Role = "Member",
                IdentityUserId = identityUserId
            };
            context.ChatUsers.Add(currentUser);
            await context.SaveChangesAsync();
            users.Add(currentUser);
        }

        isLoaded = true;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/chathub"))
            .Build();

        hubConnection.On<string, string, DateTime, bool, string?>("ReceiveMessage", (user, message, sentAt, isPrivate, recipientName) =>
        {
            messages.Add(new ChatMessageViewModel
            {
                UserName = user,
                Message = message,
                SentAt = sentAt,
                IsPrivate = isPrivate,
                RecipientUserName = recipientName
            });
            InvokeAsync(StateHasChanged);
        });

        hubConnection.Closed += async (error) =>
        {
            statusText = "Disconnected";
            await Task.Delay(2000);
            await hubConnection.StartAsync();
            if (currentUser is not null)
            {
                await hubConnection.SendAsync("RegisterUser", currentUser.Id);
            }
        };

        await hubConnection.StartAsync();
        if (currentUser is not null)
        {
            await hubConnection.SendAsync("RegisterUser", currentUser.Id);
        }
        statusText = "Connected";
    }

    private async Task Send()
    {
        if (hubConnection is null || currentUser is null || string.IsNullOrWhiteSpace(messageInput))
        {
            return;
        }

        await hubConnection.SendAsync("SendMessage", currentUser.Id, selectedRecipientId, messageInput.Trim());
        messageInput = string.Empty;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await Send();
        }
    }

    private bool CanSend => hubConnection?.State == HubConnectionState.Connected &&
        !string.IsNullOrWhiteSpace(messageInput) && currentUser is not null;

    private void SelectRecipient(int? userId) => selectedRecipientId = userId;

    private static string BuildDisplayName(string email)
        => string.IsNullOrWhiteSpace(email) ? "User" : email.Split('@')[0];

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private sealed class ChatMessageViewModel
    {
        public string UserName { get; set; } = string.Empty;
        public string Message { get; set; } = string.Empty;
        public DateTime SentAt { get; set; }
        public bool IsPrivate { get; set; }
        public string? RecipientUserName { get; set; }
    }
}
