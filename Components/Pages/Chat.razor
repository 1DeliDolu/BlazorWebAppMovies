@page "/chat"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.EntityFrameworkCore
@using BlazorSignalRApp.Data
@using BlazorSignalRApp.Models
@inject NavigationManager Navigation
@inject IDbContextFactory<ApplicationDbContext> UserDbFactory
@implements IAsyncDisposable

<PageTitle>Chat</PageTitle>

<div class="form-group">
    <label>
        Search user:
        <input type="search" @bind="userFilter" @bind:event="oninput" placeholder="Type to filter..." />
    </label>
</div>
<div class="form-group">
    <label>
        User:
        <InputSelect @bind-Value="selectedUserId">
            <option value="">Select a user</option>
            @foreach (var user in FilteredUsers)
            {
                <option value="@user.Id">@user.Name (@user.Role)</option>
            }
        </InputSelect>
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" />
    </label>
</div>
<button @onclick="Send" disabled="@(!CanSend)">Send</button>

<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection? hubConnection;
    private List<string> messages = [];
    private List<User> users = [];
    private string? messageInput;
    private string userFilter = string.Empty;
    private int? selectedUserId;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/chathub"))
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            var encodedMsg = $"{user}: {message}";
            messages.Add(encodedMsg);
            InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
    }

    private async Task Send()
    {
        if (hubConnection is null || SelectedUser is null || string.IsNullOrWhiteSpace(messageInput))
        {
            return;
        }

        await hubConnection.SendAsync("SendMessage", SelectedUser.Name, messageInput);
        messageInput = string.Empty;
    }

    private async Task LoadUsersAsync()
    {
        await using var context = await UserDbFactory.CreateDbContextAsync();
        users = await context.Users
            .AsNoTracking()
            .OrderBy(u => u.Name)
            .ToListAsync();

        selectedUserId ??= users.FirstOrDefault()?.Id;
    }

    private IEnumerable<User> FilteredUsers => string.IsNullOrWhiteSpace(userFilter)
        ? users
        : users.Where(u => u.Name?.Contains(userFilter, StringComparison.OrdinalIgnoreCase) == true);

    private User? SelectedUser => selectedUserId.HasValue
        ? users.FirstOrDefault(u => u.Id == selectedUserId)
        : null;

    private bool CanSend => IsConnected && SelectedUser is not null && !string.IsNullOrWhiteSpace(messageInput);

    private bool IsConnected =>
        hubConnection?.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
