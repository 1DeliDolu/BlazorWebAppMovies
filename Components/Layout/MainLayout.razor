@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center gap-3 flex-wrap">
            <NavLink href="" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink href="/about">About</NavLink>
            <div class="flex-grow-1"></div>
            <AuthorizeView>
                <Authorized Context="authState">
                    <span class="small text-muted me-2">
                        👤 @authState.User.Identity?.Name
                    </span>
                    <a class="nav-link px-0 me-2" href="/Account/Manage">Account</a>
                    <form method="post" action="/Account/Logout?returnUrl=/" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link px-0">Logout</button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a class="nav-link px-0 me-2" href="/Account/Login">Login</a>
                    <a class="nav-link px-0" href="/Account/Register">Register</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
